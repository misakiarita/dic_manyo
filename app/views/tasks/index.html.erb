<h1><%= t('.head') %></h1>
<%= form_with(scope: :task, local: true, method: :get, url: tasks_path) do |f| %>
  <%= f.text_field :title %>
  <%= f.submit '検索' %>
<% end %>
<table>
<head>
  <th><%= t('.user_name') %></th>
  <th><%= t('.create_date') %></th>
  <th><%= t('.due_date') %></th>
  <th><%= t('.status') %></th>
  <th><%= t('.title') %></th>
  <th><%= t('.content') %></th>
</head>

<body>
<% @tasks.each do |t| %>
  <tr class="task_row" >
  <td>投稿者の名前</td>
  <td><%= t.created_at.strftime("%Y-%m-%d %H:%M") %></td>
  <td><%= t.due.strftime("%Y-%m-%d") %></td>
  <td><%= t.status %></td>
  <td><%= t.title %></td>
  <td><%= t.content %></td>
  <td><%= link_to t('.show'), t %></td>
  <td><%= link_to t('.edit'), edit_task_path(t) %></td>
  <td><%= link_to t('.destroy'), t, method: :delete, data: { confirm: t('.confirm') } %></td>
  </tr>
<% end %>
<br>

  <%= link_to "作成日でソートする", tasks_path %>
<br>
  <%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>

</body>
</table>

<%= link_to t('.new'), new_task_path %>

