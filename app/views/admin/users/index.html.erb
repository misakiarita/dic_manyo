<h1>ユーザー 一覧画面(管理者)</h1>
<body>
<table class="table table-striped table-bordered">
<head>
<th>名前</th>
<th>メールアドレス</th>
</head>
<% @users.each do |t| %>
  <tr class="task_row" >
  <td><%= t.name %></td>
  <td><%= t.email %></td>
  <td><%= link_to t('.destroy'), t, method: :delete, data: { confirm: t('.confirm') } %></td>
  </tr>
<% end %>
</table>

<%= link_to 'ユーザー追加', new_admin_user_path%>
</body>

